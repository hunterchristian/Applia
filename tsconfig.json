{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@public/*": ["public/*"],
      "@main/*": ["src/main/*"],
      "@models/*": ["src/models/*"],
      "@renderer/*": ["src/renderer/*"],
      "@utils/*": ["src/utils/*"],
      "@components/*": ["src/renderer/components/*"],
    },
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "esnext"
  },
  "exclude": ["node_modules"],
  "typeRoots": [
    "./node_modules/@types",
    "src/typings/**/*.d.ts"
  ]
}
