{
  "name": "Applia",
  "version": "0.1.0",
  "description": "Create web applications via drag-and-drop",
  "main": "./dist/main.bundle.js",
  "scripts": {
    "init": "yarn && git config core.hooksPath .githooks",
    "bundle:prod": "rimraf dist && cross-env NODE_ENV=production webpack --progress --colors",
    "test:unit": "jest src",
    "test:unit:debug": "node --inspect-brk node_modules/.bin/jest src --runInBand",
    "test:func": "jest functional-tests",
    "test": "npm run test:unit && npm run test:func",
    "test-release:win": "yarn bundle:prod && electron-builder build --win --x64 --publish=never",
    "test-release:mac": "yarn bundle:prod && electron-builder build --mac --x64 --publish=never",
    "release": "build",
    "lint:check": "./node_modules/tslint/bin/tslint --project tsconfig.json --config tslint.json \"src/**/*.{ts,tsx}\"",
    "lint:fix": "./node_modules/tslint/bin/tslint --fix --project tsconfig.json --config tslint.json \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:fix": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "electron-dev": "concurrently \"gatsby develop\" \"wait-on http://localhost:8000 && electron main/index.js\""
  },
  "build": {
    "appId": "com.electron.applia",
    "productName": "Applia",
    "directories": {
      "app": "./dist/",
      "output": "./out/",
      "buildResources": "./installer-assets/"
    },
    "win": {
      "target": "nsis",
      "asar": false,
      "publish": [
        "github"
      ]
    },
    "mac": {
      "publish": [
        "github"
      ]
    },
    "publish": {
      "provider": "github"
    },
    "buildVersion": "0.0.1",
    "dmg": {
      "contents": [
        {
          "type": "file",
          "x": 170,
          "y": 170
        },
        {
          "path": "/Applications",
          "type": "link",
          "x": 360,
          "y": 170
        }
      ]
    }
  },
  "author": "Hunter Hodnett",
  "license": "UNLICENSED",
  "dependencies": {
    "@types/auto-bind": "^2.1.0",
    "@types/chai": "^4.1.7",
    "@types/proxyquire": "^1.3.28",
    "@types/react": "^16.7.18",
    "@types/react-dom": "^16.0.11",
    "@types/rewire": "^2.5.28",
    "@types/sinon": "^7.0.12",
    "@types/uuid": "^7.0.3",
    "@types/webdriverio": "4.13.0",
    "auto-bind": "^4.0.0",
    "concurrently": "^5.1.0",
    "devtron": "^1.4.0",
    "electron-redux": "^1.5.2",
    "electron-updater": "^4.0.14",
    "gatsby": "^2.20.25",
    "gatsby-plugin-page-creator": "^2.3.1",
    "gatsby-plugin-sass": "^2.3.0",
    "gatsby-plugin-typescript": "^2.3.3",
    "node-sass": "^4.14.0",
    "prettier": "^2.0.4",
    "puppeteer-core": "^3.0.0",
    "puppeteer-in-electron": "^3.0.0",
    "react": "^16.7.0",
    "react-contenteditable": "^3.3.4",
    "react-dnd": "^7.4.5",
    "react-dnd-html5-backend": "^7.4.4",
    "react-dom": "^16.7.0",
    "react-redux": "^7.2.0",
    "redux": "^4.0.5",
    "rewire": "^4.0.1",
    "uuid": "^3.3.2",
    "wait-on": "^4.0.2"
  },
  "devDependencies": {
    "@types/jest": "^24.0.14",
    "@types/mocha": "^5.2.6",
    "@types/react-redux": "^7.1.7",
    "@types/react-router": "^4.4.3",
    "@types/react-router-dom": "^4.3.1",
    "acorn": "^6.4.1",
    "ajv": "^6.6.2",
    "copy-pkg-json-webpack-plugin": "0.0.38",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.1",
    "electron": "^5.0.6",
    "electron-builder": "^20.38.5",
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-import-resolver-webpack": "^0.11.0",
    "eslint-plugin-import": "^2.15.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.12.4",
    "file-loader": "^4.0.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.8.0",
    "lodash": "^4.17.13",
    "redux-devtools-extension": "^2.13.8",
    "rimraf": "^2.6.3",
    "source-map-loader": "^0.2.4",
    "spectron": "^7.0.0",
    "style-loader": "^0.23.1",
    "ts-jest": "^24.0.2",
    "ts-loader": "^5.3.3",
    "ts-node": "8.0.1",
    "tsconfig-paths": "^3.7.0",
    "tslint": "^6.1.1",
    "tslint-loader": "^3.5.4",
    "tslint-microsoft-contrib": "^5.2.1",
    "typescript": "^3.8.3",
    "webpack": "^4.28.1",
    "webpack-cli": "^3.2.1",
    "webpack-shell-plugin": "^0.5.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hunterchristian/Applia.git"
  },
  "keywords": [],
  "bugs": {
    "url": "https://github.com/hunterchristian/Applia/issues"
  },
  "homepage": "https://github.com/hunterchristian/Applia#readme",
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "@/renderer(.*)": "<rootDir>/src/$1",
      "@public/(.*)": "<rootDir>/src/public/$1",
      "@main/(.*)": "<rootDir>/src/main/$1",
      "@models/(.*)": "<rootDir>/src/models/$1",
      "@renderer/(.*)": "<rootDir>/src/renderer/$1",
      "@components/(.*)": "<rootDir>/src/components/$1",
      "@decorators/(.*)": "<rootDir>/src/decorators/$1"
    }
  }
}
